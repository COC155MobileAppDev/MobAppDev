                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/add_audio_filename_session_id_hint" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/audio_layout_3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save_audio_filename_text"
                android:onClick="saveAudio"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete_audio_filename_text"
                android:onClick="deleteButtonAudio"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/audio_layout_4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/audiofilenamesbysessionidview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/audio_layout_5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/get_audio_filename_session_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
