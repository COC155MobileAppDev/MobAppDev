<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.team05.lecturec.ViewControllers.TestActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:id="@+id/module_layout_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/modulesview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/add_module_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/add_module_hint" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/module_layout_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_module_button_text"
                android:onClick="addModule"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete_module_button_text"
                android:onClick="deleteButtonModule"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/module_layout_3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_module_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/edit_module_hint" />

            <EditText
                android:id="@+id/is_archive_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/is_archive_hint" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/module_layout_4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/update_module_button_text"
                android:onClick="editButtonModule"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/module_layout_5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/modulesbyidview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/module_id_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/module_id_hint" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/module_layout_6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/get_module_by_id_button_text"
                android:onClick="getButtonModuleById"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/seperator_layout_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/seperator_view_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seperator_line"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/module_time_layout_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/add_module_time_start_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/add_start_time_hint" />

            <EditText
                android:id="@+id/add_module_time_end_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/add_end_time_hint" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/module_time_layout_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/add_module_time_notification_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/add_notification_hint" />

            <EditText
                android:id="@+id/add_module_time_module_id_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/add_module_time_module_id_hint" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/module_time_layout_3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
