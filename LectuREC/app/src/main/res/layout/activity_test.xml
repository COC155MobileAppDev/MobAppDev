        </LinearLayout>


        <LinearLayout
            android:id="@+id/seperator_layout_5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/seperator_view_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seperator_line"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/folder_layout_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/foldersview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/folder_layout_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/create_folder_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/create_folder_hint" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_folder_text"
                android:onClick="createFolder"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/folder_layout_3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete_folder_with_sessions_text"
