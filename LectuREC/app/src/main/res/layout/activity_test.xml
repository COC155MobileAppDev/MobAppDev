                android:onClick="captureImage"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete_image_text"
                android:onClick="deleteButtonImage"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/seperator_layout_4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
