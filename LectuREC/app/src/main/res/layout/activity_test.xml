                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/session_layout_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
